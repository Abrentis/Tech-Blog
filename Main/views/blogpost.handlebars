<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-desc">Leave a comment:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </div>
    </form>
</div>
<div class="row mb-4 comment"></div>
{{#each blogpost.comments }}
  <div class="col-md-5">
    <p>Posted by {{this.user.name}} on {{format_date this.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{this.content}}
    </p>
  </div>
{{/each}}
</div>